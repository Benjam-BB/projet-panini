<%= render "layouts/small_banner"%>
<div class="d-flex flex-row m-5" >
	<div class="container d-flex justify-content-center p-5 border">
		<%if @item.panini_image.attached?%>
			<%= image_tag @item.panini_image, alt: 'image panini' %>
		<%else%>
			<img src="<%=@item.image_url%>" alt="image panini">
		<%end%>
	</div>
	<div class="container d-flex flex-column justify-content-between p-5 border-right border-top border-bottom">
		<h1 class="d-flex align-self-start"><strong>Titre :</strong> <%= @item.title %> </h1>
	
		<div class=""> <strong>Description :</strong> <%= @item.description %> </div>
		<div class="d-flex flex-row justify-content-between ">
			<div class=""> <strong>Prix :</strong> <%= @item.price %> â‚¬ </div>
			<div class="pt-2"> 
				<%= link_to 'Ajouter au panier', item_join_table_carts_items_path(@item.id), method: :post, :class => "btn btn-primary"  %> 
			</div>  
		</div>
	</div>
</div>
