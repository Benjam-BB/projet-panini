<div class="container mt-5">
	<div class="card-deck d-flex mt-3">
		<% @items.each do |item| %>
			<div class="col mb-3">
				<div class="card" style="width: 16rem;">
					<%if item.panini_image.attached?%>
						<%= image_tag item.panini_image, alt: 'image panini' %>
					<%else%>
						<img src="http://3.bp.blogspot.com/-eQKLPkX27z8/TsuUq5fcwWI/AAAAAAAAUac/C9eNc1Ulh4w/s320/Pel%25C3%25A9+Panini+Br%25C3%25A9sil+Mexico+70.png" class="card-img-top" alt="card-panini">
					<%end%>

					<div class="card-body d-flex flex-column align-items-center">
						<h5 class="card-title"><%=item.title%></h5>
						<p class="card-text"><%=item.price%> â‚¬</p>
						<div class="row">
							<a href="<%=item_path(item.id)%>" class=" btn btn-primary m-1">VOIR CARTE</a>
							<a <%= link_to 'ACHETER', item_join_table_carts_items_path(item.id), method: :post, :class => "btn btn-secondary m-1" %></a>
						</div>
					</div>
				</div>
			</div>
		<% end %>
	</div>
</div>
